{
  "manifest_version": 2,

  "name": "BookTag",
  "description": "This extension helps users manage their bookmarks with tags",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "storage",
    "tabs"
  ]
}